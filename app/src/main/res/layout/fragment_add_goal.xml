<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddGoalFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/background" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="174dp"
            android:layout_height="159dp"
            android:layout_marginTop="45dp"
            android:src="@drawable/ic_baseline_data_usage_24"
            app:layout_constraintEnd_toEndOf="@+id/inputgoalname"
            app:layout_constraintStart_toStartOf="@+id/inputgoalname"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/back_home_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="79dp"
            android:layout_height="77dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="116dp"
            android:backgroundTint="#00FFFFFF"
            android:foreground="@drawable/backarrow"
            android:foregroundTint="#FFFFFF"
            android:onClick="backHome"
            android:visibility="visible"
            app:iconSize="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="#FF6DE417"
            app:strokeColor="#00000000"
            app:strokeWidth="0dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="413dp"
            android:layout_height="210dp"
            android:layout_marginTop="564dp"
            android:src="@drawable/ic_ties"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="608dp"
            android:layout_marginEnd="336dp"
            android:text="Tie 1"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/inputgoalname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="67dp"
            android:layout_marginTop="420dp"
            android:ems="10"
            android:hint="Type Name of Goal Here"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bn_save_goal"
            android:layout_width="76dp"
            android:layout_height="75dp"
            android:layout_marginStart="312dp"
            android:layout_marginTop="116dp"
            android:background="@drawable/ic_baseline_check_24"
            android:clickable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/tie2txt"
            android:layout_width="265dp"
            android:layout_height="42dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="696dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="Enter Tie 2 Here"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/tie1txt"
            android:layout_width="264dp"
            android:layout_height="43dp"
            android:layout_marginTop="600dp"
            android:layout_marginEnd="28dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="Enter Tie 1 Here"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tietitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="164dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="164dp"
            android:text="Add Ties"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputgoalname" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="332dp"
            android:layout_marginTop="696dp"
            android:text="Tie 2"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="135dp"
            android:layout_marginEnd="38dp"
            android:text="Add Goal"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_constraintEnd_toStartOf="@+id/bn_save_goal"
            app:layout_constraintStart_toEndOf="@+id/back_home_button"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/goal_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="478dp"
            android:ems="10"
            android:hint="DueDate MMDDYYYY"
            android:inputType="date"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/goal_id_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="373dp"
            android:layout_marginEnd="100dp"
            android:ems="10"
            android:hint="Enter Unique Goal ID"
            android:inputType="number"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>